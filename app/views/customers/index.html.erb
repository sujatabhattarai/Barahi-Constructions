<div class="show col-xs-offset-5">
  <h1>Listing all customers</h1>
</div>

<p style="font-size: 170%; text-align: right ">
  <i style="margin-right: 4em; text-decoration: underline; color: #2E2F30"><%= link_to "Create new customer", new_customer_path  %></i>
</p>

<% @customers.each do |customer| %>
    <div class="row">
      <div class="col-xs-offset-2 col col-xs-9">
        <div class="well well-lg">
          <div class="articles-body">
            <h4>
              <strong>Full name:</strong>
              <%= customer.full_name %>
            </h4>


            <h4>
              <strong>Phn num:</strong>
              <%= customer.phn_num %>
            </h4>

            <h4>
              <strong>Address:</strong>
              <%= customer.address %>
            </h4>

            <h4>
              <strong>Email:</strong>
              <%= customer.email %>
            </h4>
          </div>
          <div class="article-actions">
            <%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-xs btn-primary" %>
            <%= link_to 'View', customer_path(customer), class: "btn btn-xs btn-success" %>
            <%= link_to 'Delete', customer_path(customer), method: :delete,
                        data: {confirm: "Are you sure you want to delete this customer?"},
                        class: "btn btn-xs btn-danger" %>
          </div>
        </div>
      </div>
    </div>
<% end %>


