
<%= render 'shared/errors', obj: @customer %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@customer, :html => {class: "form-horizontal", role: "form"}) do |form| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :full_name %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :full_name, class:"form-control", placeholder:"Full name", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :Address %>
          </div>
          <div class="col-sm-8">
            <%= form.text_area :address,class:"form-control", placeholder:"Address", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :Phn_number %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :phn_num, class:"form-control", placeholder:"Phone number", autofocus:true%>
          </div>
        </div>


        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :email %>
          </div>
          <div class="col-sm-8">
            <%= form.email_field :email,class:"form-control", placeholder:"Email", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= form.submit class:'btn btn-primary btn-lg' %>
          </div>
        </div>

    <% end %>
    <div class="col-xs-offset-4 col-xs-6">
      [<%= link_to 'Cancel request and return to customers listing', customers_path %>]
    </div>
  </div>
</div>
