<div class="show col-xs-offset-4">
  <h2> <%= @customer.full_name  %></h2>
</div>
<div class="well col-xs-8 col-xs-offset-1">
  <h4>
    <strong>Full name:</strong>
    <%= @customer.full_name %>
  </h4>

  <h4>
    <strong>Address:</strong>
    <%= @customer.address %>
  </h4>

  <h4>
    <strong>Phn num:</strong>
    <%= @customer.phn_num %>
  </h4>


  <h4>
    <strong>Email:</strong>
    <%= @customer.email %>
  </h4>

  <div class="actions">
    <%= link_to 'Edit', edit_customer_path(@customer), class: "btn btn-xs btn-primary" %>
    <%= link_to 'Delete', customer_path(@customer), method: :delete,
                data: {confirm: "Are you sure you want to delete the customer?"},
                class: "btn btn-xs btn-danger" %>
    <%= link_to 'View all customers', customers_path, class: "btn btn-xs btn-success" %>
  </div>
</div>