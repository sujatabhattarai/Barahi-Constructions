<h1 align="center"> Add New Customer </h1>
<%= render 'shared/errors', obj: @customer %>
<%= form_for @customer do |f| %>
    <p>
      <%= f.label :full_name %><br/>
      <%= f.text_field :full_name %>
    </p>

    <p>
      <%= f.label :address %><br/>
      <%= f.text_area :address %>
    </p>



    <p>
      <%=  f.label :phn_num %><br/>
      <%= f.text_field :phn_num %>
    </p>

    <p>
      <%=  f.label :email %><br/>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>