<div class="show col-xs-offset-5">
  <h1>Listing all Accounts</h1>
</div>

<p style="font-size: 170%; text-align: right ">
  <i style="margin-right: 4em; text-decoration: underline; color: #2E2F30"><%= link_to "Create new account", new_account_path  %></i>
</p>

<% @accounts.each do |account| %>
    <div class="row">
      <div class="col-xs-offset-2 col col-xs-9">
        <div class="well well-lg">
          <div class="articles-body">
            <h4>
              <strong>Customer name:</strong>
              <%= account.customer_name %>
            </h4>

            <h4>
              <strong>Total amount:</strong>
              <%= account.total_amount %>
            </h4>

            <h4>
              <strong>Amount paid:</strong>
              <%= account.amount_paid %>
            </h4>

            <h4>
              <strong>Amount due:</strong>
              <%= account.amount_due %>
            </h4>
          </div>

          <div class="article-actions">
            <%= link_to 'Edit', edit_account_path(account), class: "btn btn-xs btn-primary" %>
            <%= link_to 'Delete', account_path(account), method: :delete,
                        data: {confirm: "Are you sure you want to delete this account?"},
                        class: "btn btn-xs btn-danger" %>
            <%= link_to 'View', account_path(account), class: "btn btn-xs btn-success" %>
          </div>
        </div>
      </div>
    </div>
<% end %>