
<%= render 'shared/errors', obj: @account %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@account, :html => {class: "form-horizontal", role: "form"}) do |form| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :Customer_name %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :customer_name, class:"form-control", placeholder:"Customer name", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :total_amount %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :total_amount,class:"form-control", placeholder:"Total amount", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :amount_paid %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :amount_paid, class:"form-control", placeholder:"Amount paid", autofocus:true%>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :amount_due %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :amount_due, class:"form-control", placeholder:"Amount due", autofocus:true%>
          </div>
        </div>


        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= form.submit class:'btn btn-primary btn-lg' %>
          </div>
        </div>

    <% end %>
    <div class="col-xs-offset-4 col-xs-6">
      [<%= link_to 'Cancel request and return to accounts listing', accounts_path %>]
    </div>
  </div>
</div>
