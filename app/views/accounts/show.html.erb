
<div class="well col-xs-8 col-xs-offset-1">
  <h4>
    <strong>Customer name:</strong>
    <%= @account.customer_name %>
  </h4>

  <h4>
    <strong>Total amount:</strong>
    <%= @account.total_amount %>
  </h4>

  <h4>
    <strong>Amount paid:</strong>
    <%= @account.amount_paid %>
  </h4>


  <h4>
    <strong>Amount due:</strong>
    <%= @account.amount_due %>
  </h4>

  <div class="actions">
    <%= link_to 'Edit', edit_account_path(@account), class: "btn btn-xs btn-primary" %>
    <%= link_to 'Delete', account_path(@account), method: :delete,
                data: {confirm: "Are you sure you want to delete the account?"},
                class: "btn btn-xs btn-danger" %>
    <%= link_to 'View all accounts', accounts_path, class: "btn btn-xs btn-success" %>
  </div>
</div>