<div class="show col-xs-offset-4">
  <h2> <%= @equipment.name  %></h2>
</div>
<div class="well col-xs-8 col-xs-offset-1">
  <h4>
    <strong>Name:</strong>
    <%= @equipment.name %>
  </h4>

  <h4>
    <strong>Make:</strong>
    <%= @equipment.make %>
  </h4>

  <h4>
    <strong>Model:</strong>
    <%= @equipment.model %>
  </h4>


  <h4>
    <strong>Serial Num:</strong>
    <%= @equipment.serial_num %>
  </h4>

  <h4>
    <strong>Manufactured Date:</strong>
    <%= @equipment.mfd %>
  </h4>

  <h4>
    <strong>Vendor:</strong>
    <%= @equipment.vendor %>
  </h4>

  <h4>
    <strong>Purchase Price:</strong>
    <%= @equipment.purchase_price %>
  </h4>

  <h4>
    <strong>Owner:</strong>
    <%= @equipment.owner %>
  </h4>

  <div class="actions">
    <%= link_to 'Edit', edit_equipment_path(@equipment), class: "btn btn-xs btn-primary" %>
    <%= link_to 'Delete', equipment_path(@equipment), method: :delete,
                data: {confirm: "Are you sure you want to delete the equipment?"},
                class: "btn btn-xs btn-danger" %>
    <%= link_to 'View all equipments', equipment_index_path, class: "btn btn-xs btn-success" %>
  </div>
</div>