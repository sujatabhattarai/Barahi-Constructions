<div class="show col-xs-offset-5">
  <h1>Listing all equipments</h1>
</div>

<p style="font-size: 170%; text-align: right ">
  <i style="margin-right: 4em; text-decoration: underline; color: #2E2F30"><%= link_to "Create new equipment", new_equipment_path  %></i>
</p>

<% @equipments.each do |equipment| %>
    <div class="row">
      <div class="col-xs-offset-2 col col-xs-9">
        <div class="well well-lg">
          <div class="articles-body">
            <h4>
              <strong>Name:</strong>
              <%= equipment.name %>
            </h4>

            <h4>
              <strong>Equipment type:</strong>
              <%= equipment.equip_type %>
            </h4>

            <h4>
              <strong>Make:</strong>
              <%= equipment.make %>
            </h4>

            <h4>
              <strong>Model:</strong>
              <%= equipment.model %>
            </h4>

            <h4>
              <strong>Serail Number:</strong>
              <%= equipment.serial_num %>
            </h4>

            <h4>
              <strong>Manufactured date:</strong>
              <%= equipment.mfd %>
            </h4>

            <h4>
              <strong>Vendor:</strong>
              <%= equipment.vendor %>
            </h4>

            <h4>
              <strong>Purchase price:</strong>
              <%= equipment.purchase_price %>
            </h4>

            <h4>
              <strong>Owner:</strong>
              <%= equipment.owner %>
            </h4>

          </div>
          <div class="article-actions">
            <%= link_to 'Edit', edit_equipment_path(equipment), class: "btn btn-xs btn-primary" %>
            <%= link_to 'View', equipment_path(equipment), class: "btn btn-xs btn-success" %>
            <%= link_to 'Delete', equipment_path(equipment), method: :delete,
                        data: {confirm: "Are you sure you want to delete this equipment?"},
                        class: "btn btn-xs btn-danger" %>
          </div>
        </div>
      </div>
    </div>
<% end %>


