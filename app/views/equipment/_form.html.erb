
<%= render 'shared/errors', obj: @equipment %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@equipment, :html => {class: "form-horizontal", role: "form"}) do |form| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :Name %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :name, class:"form-control", placeholder:"Equipment Name", autofocus:true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :Equipment_type %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :equip_type, class:"form-control", placeholder:"Equipment type", autofocus:true  %>
          </div>
        </div>


        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :Make %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :make, class:"form-control", placeholder:"Make", autofocus:true%>
          </div>
        </div>


        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :Model %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :model,class:"form-control", placeholder:"Model", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :Serial_num %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :serial_num,class:"form-control", placeholder:"Serial number", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :Mfd %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :mfd,class:"form-control", placeholder:"Manufactured date", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :Vendor %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :vendor,class:"form-control", placeholder:"Vendor", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :Purchase_price %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :purchase_price,class:"form-control", placeholder:"Purchase Price", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :Owner %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :owner,class:"form-control", placeholder:"Owner", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= form.submit class:'btn btn-primary btn-lg' %>
          </div>
        </div>

    <% end %>
    <div class="col-xs-offset-4 col-xs-6">
      [<%= link_to 'Cancel request and return to equipments listing', equipment_index_path %>]
    </div>
  </div>
</div>
