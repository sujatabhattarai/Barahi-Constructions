<div class="show col-xs-offset-4">
  <h2> <%= @employee.first_name + " "+ @employee.last_name  %></h2>
</div>
<div class="well col-xs-8 col-xs-offset-1">
      <h4>
        <strong>First name:</strong>
        <%= @employee.first_name %>
      </h4>

      <h4>
        <strong>Last name:</strong>
        <%= @employee.last_name %>
      </h4>

      <h4>
        <strong>Phn num:</strong>
        <%= @employee.phn_num %>
      </h4>

      <h4>
        <strong>Address:</strong>
        <%= @employee.address %>
      </h4>

      <h4>
        <strong>Email:</strong>
        <%= @employee.email %>
      </h4>

  <div class="article-actions">
    <%= link_to 'Edit', edit_employee_path(@employee), class: "btn btn-xs btn-primary" %>
    <%= link_to 'Delete', employee_path(@employee), method: :delete,
        data: {confirm: "Are you sure you want to delete the employee?"},
                class: "btn btn-xs btn-danger" %>
    <%= link_to 'View all employees', employees_path, class: "btn btn-xs btn-success" %>
  </div>
</div>

