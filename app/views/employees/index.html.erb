<div class="show col-xs-offset-5">
  <h1>Listing all employees</h1>
</div>

<p style="font-size: 170%; text-align: right ">
  <i style="margin-right: 4em; text-decoration: underline; color: #2E2F30"><%= link_to "Create new employee", new_employee_path  %></i>
</p>

<% @employees.each do |employee| %>
    <div class="row">
      <div class="col-xs-offset-2 col col-xs-9">
          <div class="well well-lg">
            <div class="articles-body">
              <h4>
                <strong>First name:</strong>
                <%= employee.first_name %>
              </h4>

              <h4>
                <strong>Last name:</strong>
                <%= employee.last_name %>
              </h4>

              <h4>
                <strong>Phn num:</strong>
                <%= employee.phn_num %>
              </h4>

              <h4>
                <strong>Address:</strong>
                <%= employee.address %>
              </h4>

              <h4>
                <strong>Email:</strong>
                <%= employee.email %>
              </h4>
            </div>
          <div class="article-actions">
            <%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-xs btn-primary" %>
            <%= link_to 'View', employee_path(employee), class: "btn btn-xs btn-success" %>
            <%= link_to 'Delete', employee_path(employee), method: :delete,
                        data: {confirm: "Are you sure you want to delete the employee?"},
                        class: "btn btn-xs btn-danger" %>
          </div>
        </div>
      </div>
    </div>
<% end %>


