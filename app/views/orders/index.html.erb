<div class="show col-xs-offset-5">
  <h1>Listing all Orders</h1>
</div>

<p style="font-size: 170%; text-align: right ">
  <i style="margin-right: 4em; text-decoration: underline; color: #2E2F30"><%= link_to "Create new order", new_order_path  %></i>
</p>

<% @orders.each do |order| %>
    <div class="row">
      <div class="col-xs-offset-2 col col-xs-9">
        <div class="well well-lg">
          <div class="articles-body">
            <h4>
              <strong>Equipment:</strong>
              <%= order.equipment %>
            </h4>

            <h4>
              <strong>Order date:</strong>
              <%= order.order_date %>
            </h4>

            <h4>
              <strong>Duration:</strong>
              <%= order.duration %>
            </h4>
          </div>
          <div class="article-actions">
            <%= link_to 'Edit', edit_order_path(order), class: "btn btn-xs btn-primary" %>
            <%= link_to 'Delete', order_path(order), method: :delete,
                        data: {confirm: "Are you sure you want to delete this order?"},
                        class: "btn btn-xs btn-danger" %>
            <%= link_to 'View', order_path(order), class: "btn btn-xs btn-success" %>
          </div>
        </div>
      </div>
    </div>
<% end %>