
<%= render 'shared/errors', obj: @order %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@order, :html => {class: "form-horizontal", role: "form"}) do |form| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :Equipment %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :equipment, class:"form-control", placeholder:"Equipment name", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :Order_date %>
          </div>
          <div class="col-sm-8">
            <%= form.text_area :order_date,class:"form-control", placeholder:"Order date", autofocus:true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :Duration %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :duration, class:"form-control", placeholder:"Duration", autofocus:true%>
          </div>
        </div>


        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= form.submit class:'btn btn-primary btn-lg' %>
          </div>
        </div>

    <% end %>
    <div class="col-xs-offset-4 col-xs-6">
      [<%= link_to 'Cancel request and return to orders listing', orders_path %>]
    </div>
  </div>
</div>
