
<div class="well col-xs-8 col-xs-offset-1">
  <h4>
    <strong>Equipment:</strong>
    <%= @order.equipment %>
  </h4>

  <h4>
    <strong>Order Date:</strong>
    <%= @order.order_date %>
  </h4>

  <h4>
    <strong> Duration:</strong>
    <%= @order.duration %>
  </h4>

  <div class="actions">
    <%= link_to 'Edit', edit_order_path(@order), class: "btn btn-xs btn-primary" %>
    <%= link_to 'Delete', account_path(@order), method: :delete,
                data: {confirm: "Are you sure you want to delete the order?"},
                class: "btn btn-xs btn-danger" %>
    <%= link_to 'View all orders', orders_path, class: "btn btn-xs btn-success" %>
  </div>
</div>